<section>
    
  <div class="container">

    <h1>Edit Offer</h1>


    {{!-- ==================================================== Add Offer Form ==================================================== --}}

    <form id="add-coupon-form" action="/admin/update-offer" method="POST">

      <div class="form-group">
        <label for="category Id">Offer Name</label>
        <div class="input-group">
          <input type="text" class="form-control" id="offerName" name="offerName" value="{{offerData.offerName}}" required>
        </div>
      </div>

      {{#if offerExistError}}
      <div>
        <p style="color: red;">{{offerExistError}}</p>
      </div>
      {{/if}}

      <div class="form-group">
        <label for="Coupon description">Coupon Description:</label>
        <textarea class="form-control" id="offerDescription" name="offerDescription" rows="5" required>{{offerData.offerDescription}}</textarea>
      </div>

      <div class="form-group">
        <label for="Discount percentage">Discount percentage:</label>
        <div class="input-group">
          <input type="number" class="form-control" id="discountPercentage" name="discountPercentage" min="1" max="99" step="1" value="{{offerData.discountPercentage}}" required>
        </div>
      </div>

      <div class="form-group">
        <label for="Max discount">Max discount Amount: </label>
        <div class="input-group">
          <input type="number" class="form-control" id="maxDiscountAmount" name="maxDiscountAmount" min="0" step="1" value="{{offerData.maxDiscountAmount}}" required>
        </div>
      </div>

      <div class="form-group">
        <label for="Min order value">Min order value: </label>
        <div class="input-group">
          <input type="number" class="form-control" id="minOrderValue" name="minOrderValue" min="0" step="1" value="{{offerData.minOrderValue}}" required>
        </div>
      </div>

      <div class="form-group">
        <label for="Valid For">Valid For:</label>
        <div class="input-group">
          <input type="number" class="form-control" id="validFor" name="validFor" min="1" max="180" step="1" placeholder="Number of days for which offer is valid" value="{{offerData.validFor}}" required>
        </div>
      </div>

      <div class="form-group">
        <label for="Coupon Status">Activate Coupon:</label>
        <select class="form-control" id="activeOffer" name="activeOffer" required>
          <option value="true" {{#if offerData.activeOffer}}selected{{/if}}>Yes</option>
          <option value="false" {{#unless offerData.activeOffer}}selected{{/unless}}>No</option>
        </select>
      </div>

      <input type="hidden" class="form-control" id="offerId" name="offerId" value="{{offerData._id}}" required>

      <br>

      
      {{!-- ========================== Form Submission Button ========================== --}}

      <button type="submit" class="btn btn-primary">Add New Offer</button>
      <button type="reset" class="btn btn-secondary ml-2">Reset</button>


    </form>

  </div>

</section>


