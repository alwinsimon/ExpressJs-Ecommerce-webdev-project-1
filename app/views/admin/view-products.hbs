<section>

    <div class="container">

        <div class="row mt-4 justify-content-end">

            <form action="/admin/add-product" method="GET" class="col-md-2">
                <button class="btn btn-success" type="submit">Add New Product</button>
            </form>

        </div>

        {{!-- ====================TABLE==================== --}}

        <table class="table mt-4">

            {{!-- ==========Table Header========== --}}

            <thead>
                <tr>
                    <th scope="col">Product Id</th>
                    <th scope="col">Database Id</th>
                    <th scope="col">Product</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>

            {{!-- ==========Table Body========== --}}

            <tbody>

                {{#each products}}

                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.category.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg" alt="{{this.name}}"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure that you want to delete {{this.name}} ?')">DELETE</a>
                    </td>
                </tr>

                {{/each}}

            </tbody>

        </table>

    </div>

</section>