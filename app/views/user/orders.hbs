{{!-- ==============================Past Orders Page============================== --}}

<div style="display: flex; justify-content: center; padding-top: 40px ; height: 100vh; margin: 0; font-family: Arial, sans-serif; background-color: #f5f5f5;">

    <div style="width: 95%; background-color: #fff; padding: 20px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">

        <h1 style="text-align: center;">Orders</h1>

        <table id="cartTable" style="width: 100%; border-collapse: collapse;">

            <thead style="background-color: #f2f2f2;">
                <tr>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Date</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Address</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">PIN Code</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Phone Number</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Total Amount</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Payment Method</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Order Status</th>
                    <th style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">Actions</th>
                </tr>
            </thead>

            <tbody>

                {{#each orderDetails}}

                    <tr class="cart-row">

                        <td>{{this.date}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.orderValue}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.orderStatus}}</td>
                        
                        <td>

                            <form method="POST" action="/ordered-product-details">
                                <button name="orderId" value="{{this._id}}" type="submit" class="btn btn-primary animate__animated animate__fadeInLeft">View Products</button>
                            </form>

                            {{#if this.cancellationStatus }}

                            <form method="POST" action="/order-cancellation-status">
                                <button name="orderId" value="{{this._id}}" type="submit" class="btn btn-primary animate__animated animate__fadeInLeft">Cancellation Status</button>
                            </form>

                            {{else}}

                            <form method="POST" action="/order-cancellation-request">
                                <button name="orderId" value="{{this._id}}" type="submit" class="btn btn-primary animate__animated animate__fadeInLeft" onclick="return confirm('Are you sure that you want to cancel this order ?')">Cancel Order</button>
                            </form>

                            {{/if}}

                        </td>

                    </tr>

                {{/each}}

            </tbody>

        </table>

    </div>

</div>

<style>
    /* Hover animation */
    .cart-row:hover {
        animation: row-hover 0.3s forwards;
    }

    @keyframes row-hover {
        from {
            transform: scale(1);
            box-shadow: none;
        }
        to {
            transform: scale(1.05);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
        }
    }

    /* Remove item button style */
    .remove-item {
        background-color: #dc3545;
        color: #fff;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

</style>